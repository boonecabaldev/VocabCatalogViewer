{
  "manifest_version": 3,
  "name": "Vocab Master",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "clipboardWrite"],
  "web_accessible_resources": [{
    "resources": ["data/words-database.json"],
    "matches": ["<all_urls>"]
  }]
}